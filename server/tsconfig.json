{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "rootDir": "./",
      "outDir": "./dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "typeRoots": ["./node_modules/@types", "./types"],
      "skipLibCheck": true,
      "allowJs": true // <-- The key for gradual migration
    },
    "include": ["index.ts","src/**/*","routes/**/*","modals/**/*","middleware/**/*",],
  }
