{
    "compilerOptions": {
      "target": "ES2022", // Updated for modern Node
      "module": "NodeNext", // Use NodeNext
      "moduleResolution": "NodeNext", // Use NodeNext
      "rootDir": "./",
      "outDir": "./dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "typeRoots": ["./node_modules/@types", "./types"],
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "verbatimModuleSyntax": true
    },
    "include": ["index.ts","src/**/*","routes/**/*","modals/**/*","middleware/**/*",]
}
